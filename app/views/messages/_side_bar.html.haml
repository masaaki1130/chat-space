.header
  .leftheader
    .leftheader__list
      %h3.leftheader__name
        = current_user.name
      %ul.leftheader__iconlists
        %li.leftheader__icon
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.leftheader__icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .grouplist
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__massage
            = group.show_last_message



